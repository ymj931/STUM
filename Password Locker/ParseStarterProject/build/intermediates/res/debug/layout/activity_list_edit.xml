<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.parse.starter.ListEdit">

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:inputType="text"
        android:hint="사이트 이름"
        android:textColorHint="@android:color/black"
        android:textColor="@android:color/black"
        android:textSize="7pt"
        android:layout_centerHorizontal="true"
        android:background="@null"
        />


    <EditText
        android:id="@+id/edit_id"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:inputType="text"
        android:hint="ID"
        android:textSize="7pt"
        android:textColorHint="@android:color/black"
        android:textColor="@android:color/black"
        android:background="@null"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edit_name"
        />

    <EditText
        android:id="@+id/edit_pw"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:hint="Password"
        android:textSize="7pt"
        android:textColorHint="@android:color/black"
        android:textColor="@android:color/black"
        android:background="@null"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/edit_id"
        android:layout_below="@+id/edit_id"
        />

    <Button
        android:id="@+id/edit_auto_generate"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/edit_id"
        android:layout_toLeftOf="@+id/edit_toggle"
        android:background="#4A66AC"
        />

    <ToggleButton
        android:id="@+id/edit_toggle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/edit_id"
        android:layout_alignRight="@id/edit_id"
        android:background="#4A66AC"
        />

    <EditText
        android:id="@+id/edit_memo"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:inputType="textMultiLine"
        android:textSize="7pt"
        android:textColorHint="@android:color/black"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/edit_id"
        android:layout_below="@+id/edit_pw"
        />

    <Button
        android:id="@+id/edit_item"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/edit_memo"
        android:layout_alignRight="@id/edit_id"
        android:background="#4A66AC"
        android:text="완료"
        />

</RelativeLayout>
